<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:layout_centerHorizontal="true"
        android:text="Login"
        android:textSize="34dp"
        />

    <TextView
        android:id="@+id/txtUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="70dp"
        android:layout_marginTop="200dp"
        android:text="Usuario:"
        android:textSize="19dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="70dp"
        android:paddingTop="3dp"
        android:text="Ingrese su usuario"
        android:layout_below="@id/txtUsuario"
        android:textColor="#D3D5CD"

        />

    <TextView
        android:id="@+id/txtContrase単a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="70dp"
        android:layout_marginTop="290dp"
        android:text="Contrase単a:"
        android:textSize="19dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="70dp"
        android:paddingTop="3dp"
        android:text="Ingrese su contrase単a"
        android:layout_below="@id/txtContrase単a"
        android:textColor="#D3D5CD"

        />

    <Button
        android:id="@+id/btnIngresar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="100dp"
        android:layout_marginBottom="240dp"
        android:text="Ingresar"
        android:textSize="18dp"
        android:onClick="btnIngresar"
        />

</RelativeLayout>